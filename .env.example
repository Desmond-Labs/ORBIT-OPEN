# ORBIT Image Forge Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git repository

# Frontend Configuration (Vite) - New API Key System
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_legacy_anon_key_here
VITE_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_new_publishable_key_here

# Backend Configuration (Edge Functions) - New API Key System
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_legacy_service_role_key_here
SUPABASE_SECRET_KEY=sb_secret_your_new_secret_key_here
SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_new_publishable_key_here
SUPABASE_ACCESS_TOKEN=your_access_token_here
SUPABASE_BUCKET_NAME=orbit-images

# Migration Note: During transition period, both legacy and new keys are supported
# Legacy: SUPABASE_SERVICE_ROLE_KEY (eyJ... format)
# New: SUPABASE_SECRET_KEY (sb_secret_... format) and SUPABASE_PUBLISHABLE_KEY (sb_publishable_... format)

# Stripe Configuration (Use test keys for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# GitHub Configuration
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_pat_here

# Google AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# MCP Server Paths (adjust to your local setup)
ORBIT_METADATA_MCP_PATH=/path/to/orbit-metadata-mcp/simple-orbit-mcp
SUPABASE_STORAGE_MCP_PATH=/path/to/supabase-storage-mcp
STRIPE_MCP_PATH=/path/to/stripe-mcp-v1
CLAUDE_CONVERSATION_SEARCH_PATH=/path/to/claude-conversation-search
ORBIT_GEMINI_ANALYSIS_MCP_PATH=/path/to/orbit-image-analysis-mcp

# Development Configuration
NODE_OPTIONS=--max-old-space-size=2048

# Email Configuration (for production)
RESEND_API_KEY=your_resend_api_key_here
FRONTEND_URL=https://your-frontend-domain.com